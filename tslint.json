{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-standard",
    "tslint-config-prettier"
  ],
  "rules": {
    "interface-name": [true, "never-prefix"],
    "jsx-boolean-value": false,
    "no-namespace": [true, "allow-declarations"]
  },
  "linterOptions": {
    "exclude": ["**/*.{test}.ts{,x}", "dist", "node_modules"]
  }
}
