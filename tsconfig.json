{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "jsx": "react",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "plugins": [
      {
        "name": "tslint-language-service",
        "alwaysShowRuleFailuresAsWarnings": true
      }
    ],
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "es2017.object", "dom"]
  },
  "include": [
    "./__mocks__/**/*.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./config/typescript/**/*"
  ],
  "exclude": ["./src/**/*.test.*"]
}
