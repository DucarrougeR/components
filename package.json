    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/runtime": "^7.4.3",
    "@react-workspaces/react-scripts": "3.0.1-alpha-07",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.1.3",
    "@types/enzyme": "^3.9.1",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.136",
    "@types/node": "^12.7.5",
    "@types/react": "^16.9.2",
