    "@types/styled-components": "^4.1.19",
    "@types/styled-system": "^3.2.2",
    "@types/uuid": "^3.4.5",
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-core": "^7.0.0-bridge",
    "babel-jest": "^24.7.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-styled-components": "^1.10.6",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.14.3",
    "jest": "^24.7.1",
    "jest-styled-components": "^6.3.3",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.5",
    "lodash": "^4.17.15",
    "npm-run-all": "^4.1.5",
    "pre-commit": "1.2.2",
    "prettier": "^1.17.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "styled-components": "^4.3.2",
    "styled-system": "^3.2.1",
    "stylelint": "^11.0.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.8.0",
    "typescript": "^3.6.2",
    "uuid": "^3.3.2",
    "webpack": "^4.30.0"
  },
  "resolutions": {
    "handlebars": "4.2.0",
    "lodash": ">=4.17.15",
    "lodash-es": ">=4.17.15"
  },
  "lint-staged": {
    "**/*.ts?(x)": [
      "stylelint",
      "prettier --write",
      "git add"
    ],
    "**/*.js?(x)": [
      "prettier --write",
      "git add"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ],
  "publishConfig": {
    "registry": "https://nexusrepo.looker.com/repository/looker-npm-private/"
  },
  "scripts": {
    "xprebuild": "run-p tsc lint",
    "build": "lerna link && lerna run --parallel 'build:es'",
    "postbuild": "yarn build:declarations",
    "build:declarations": "lerna run --parallel 'build:declaration'",
    "fix": "run-p -c 'lint:ts-* --fix'",
    "lint": "run-p -c lint:*",
    "lint:css": "stylelint 'packages/**/*.ts{,x}'",
    "xlint:es": "eslint 'packages/**/*.ts{,x}'",
    "lint:ts": "run-p -c lint:ts-*",
    "lint:ts-prod": "tslint --config tslint.prod.json 'packages/**/*.ts{,x}'",
    "lint-staged": "yarn exec lint-staged",
    "commit": "git-cz",
    "npmrc": "bin/create_npmrc.sh",
    "npmrc:clean": "rm .npmrc",
    "prerelease": "yarn build",
    "release": "lerna publish",
    "test": "jest",
    "tsc": "tsc"
  }
}
